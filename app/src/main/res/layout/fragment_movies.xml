<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mahmoudhamdyae.themoviedb1.ui.explore.MoviesViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/activity_padding"
                android:paddingTop="@dimen/activity_padding"
                android:paddingEnd="@dimen/activity_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/popular_movies"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/view_all_button_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos_grid_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="@dimen/movies_padding"
                app:moviesExploreListData="@{viewModel.moviesListPopular}"
                tools:listitem="@layout/movie_explore_view_item" />

            <ImageView
                android:id="@+id/status_image_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/status_image_description"
                app:movieApiStatus="@{viewModel.statusPopular}"
                tools:src="@drawable/loading_animation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/activity_padding"
                android:paddingEnd="@dimen/activity_padding">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/top_rated_movies"
                    android:textColor="@color/colorText" />

                <Button
                    android:id="@+id/view_all_button_top_rated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos_grid_top_rated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:padding="@dimen/movies_padding"
                app:moviesExploreListData="@{viewModel.moviesListTopRated}"
                tools:listitem="@layout/movie_explore_view_item" />

            <ImageView
                android:id="@+id/status_image_top_rated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/status_image_description"
                app:movieApiStatus="@{viewModel.statusTopRated}"
                tools:src="@drawable/loading_animation" />
        </LinearLayout>
    </ScrollView>
</layout>