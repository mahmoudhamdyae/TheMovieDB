<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mahmoudhamdyae.themoviedb.explore.tvshows.TVShowsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/popular_tv_shows" />

                <Button
                    android:id="@+id/view_all_button_popular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos_grid_popular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_movie_image_height"
                android:layout_below="@+id/popular"
                android:clipToPadding="false"
                android:padding="@dimen/movies_padding"
                app:moviesListData="@{viewModel.tvShowsListPopular}"
                tools:listitem="@layout/movie_explore_view_item" />

            <LinearLayout
                android:id="@+id/top_rated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photos_grid_popular"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/top_rated_tv_shows" />

                <Button
                    android:id="@+id/view_all_button_top_rated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photos_grid_top_rated"
                android:layout_width="match_parent"
                android:layout_height="@dimen/details_movie_image_height"
                android:layout_below="@+id/top_rated"
                android:clipToPadding="false"
                android:padding="@dimen/movies_padding"
                app:moviesListData="@{viewModel.tvShowsListTopRated}"
                tools:listitem="@layout/movie_explore_view_item" />

            <ImageView
                android:id="@+id/status_image_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/popular"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/status_image_description"
                app:movieApiStatus="@{viewModel.statusPopular}"
                tools:src="@drawable/loading_animation" />

            <ImageView
                android:id="@+id/status_image_top_rated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_rated"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/status_image_description"
                app:movieApiStatus="@{viewModel.statusTopRated}"
                tools:src="@drawable/loading_animation" />
        </RelativeLayout>
    </ScrollView>
</layout>