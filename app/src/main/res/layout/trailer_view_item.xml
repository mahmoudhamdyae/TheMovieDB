<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="property"
            type="com.mahmoudhamdyae.themoviedb1.database.network.Trailer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_padding">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:orientation="horizontal"
                android:padding="@dimen/tabs_padding">

                <View
                    android:layout_width="@dimen/play_video_dimension"
                    android:layout_height="@dimen/play_video_dimension"
                    android:background="@android:drawable/ic_media_play"
                    android:padding="@dimen/play_video_padding" />

                <TextView
                    android:id="@+id/trailer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{property.name}"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    tools:text="Trailer Name"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>