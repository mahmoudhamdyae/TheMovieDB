<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="property"
            type="com.mahmoudhamdyae.themoviedb1.data.models.Trailer" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_padding">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/card_background"
                android:padding="@dimen/tabs_padding">

                <ImageView
                    android:layout_width="@dimen/trailer_image_width"
                    android:layout_height="@dimen/trailer_image_height"
                    android:padding="@dimen/play_video_padding"
                    app:trailersImage="@{property.key}"
                    android:contentDescription="@string/trailer_image_view_description" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_youtube"
                    android:contentDescription="@string/trailer_image_youtube_description" />

                <TextView
                    android:id="@+id/trailer_name"
                    android:layout_width="@dimen/trailer_image_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/card_rate"
                    android:gravity="center"
                    android:text="@{property.name}"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    tools:text="Trailer Name" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>